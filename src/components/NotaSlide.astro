  <style>


.container {
  position: relative;
  height: 100%;
  width: 100%;
  
}

.window {
  
  width: 90%;
  overflow: hidden;
  position: relative;
  border-radius: 20px;
  box-shadow: 0 0 20px 15px #0000002f, 0 0 10px 5px #00000017;
}

.slider {
  height: 100%;
  width: 500%;
  display: flex;
}

.slide {
  position: relative;
  flex: 0 0 20%;
  max-width: 100%;
  animation: slide 30s infinite ease-in-out;
}

.slider:hover .slide {
  animation-play-state: paused;
}

@keyframes slide {
  0% {
    left: 0;
  }
  25% {
    left: -20%;
  }
  50% {
    left: -40%;
  }
  75% {
    left: -60%;
  }
  100% {
    left: -80%; /* Cambia a -100% */
  }
}

  </style>