---
import 'animate.css';
---

<section id="ourMission">
    <div class="cs-container">
      <div class="cs-wrapper">
        <picture class="cs-picture">
          
          <img
            loading="lazy"
            decoding="async"
            src="/reforma.webp"
            alt="body builder"
            width="500"
            height="552"
            aria-hidden="true"
          />
        </picture>
      </div>
      <div class="cs-content gap-4 invisible animate zoomin ">
        <span class="text-5xl font-bold text-[--primary]">OUR MISSION</span>
        <h2 class="dark:text-white text-5xl font-extrabold">Make your circle healthier together</h2>
        <p class="text-pretty text-xl dark:text-white my-3">
          Our mission is to connect people with innovative technology to simplify and enhance their lives. We exceed customer expectations by delivering exceptional service, quality products, and easy-to-use solutions for residential and commercial spaces. Our knowledgeable staff helps inspire, and solve problems for customers.
        </p>
        <a href="#contact"> <button class="relative inline-flex items-center justify-center p-0.5  mb-2 me-2 overflow-hidden text-md font-medium text-[--primary] rounded-lg group bg-gradient-to-br from-[--primary] to-blue-500 group-hover:from-[--primary] group-hover:to-[--primary] hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-cyan-200 dark:focus:ring-cyan-800 dark:shadow-[0_4px_9px_-4px_rgba(59,113,202,0.5)]">
          <span class="relative px-7 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">
          Contact Us
          </span>
          </button></a>
      </div>
    </div>
  </section>

  <style>
    /* Mobile - 360px */
@media only screen and (min-width: 0rem) {
  #ourMission {
    padding: var(--sectionPadding);
    /* clips the red box from causing overflow issues */
    overflow: hidden;
  }
  #ourMission .cs-container {
    width: 100%;
    /* changes to 1280px at tablet */
    max-width: 34.375rem;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* 48px - 64px */
    gap: clamp(3rem, 6vw, 4rem);
  }
  #ourMission .cs-content {
    /* set text align to left if content needs to be left aligned */
    text-align: left;
    width: 100%;
    max-width: 33.875rem;
    margin-right: auto;
    display: flex;
    flex-direction: column;
    /* centers content horizontally, set to flex-start to left align */
    align-items: flex-start;
  }

  #ourMission .cs-text {
    margin-bottom: 1rem;
  }
  #ourMission .cs-text:last-of-type {
    margin-bottom: 2rem;
  }
  #ourMission .cs-button-solid {
    font-size: 1rem;
    /* 46px - 56px */
    line-height: clamp(2.875rem, 5.5vw, 3.5rem);
    text-decoration: none;
    font-weight: 700;
    text-align: center;
    margin: 0;
    color: #fff;
    min-width: 9.375rem;
    padding: 0 1.5rem;
    background-color: var(--primary);
    border-radius: 0.25rem;
    display: inline-block;
    position: relative;
    z-index: 1;
    /* prevents padding from adding to the width */
    box-sizing: border-box;
  }
  #ourMission .cs-button-solid:before {
    content: "";
    position: absolute;
    height: 100%;
    width: 0%;
    background: #000;
    opacity: 1;
    top: 0;
    left: 0;
    z-index: -1;
    border-radius: 0.25rem;
    transition: width 0.3s;
  }
  #ourMission .cs-button-solid:hover:before {
    width: 100%;
  }
  #ourMission .cs-wrapper {
    width: 95%;
    max-width: 34.375rem;
    /* 28px - 80px */
    /* pushes up and down by the same amount the decorative box overflows the wrapper */
    margin: clamp(1.75em, 7.8vw, 5em) 0;
    position: relative;
  }
  #ourMission .cs-wrapper:before {
    /* Red decorative box */
    content: "";
    /* make it huge so it covers everything on the left as it overflows */
    width: 50em;
    background: var(--primary);
    opacity: 1;
    border-radius: 1rem;
    position: absolute;
    display: block;
    /* 28px - 80px */
    /* wrapped in a calc function to get a negative clamp value */
    top: calc(clamp(1.75em, 7.8vw, 5em) * -1);
    bottom: calc(clamp(1.75em, 7.8vw, 5em) * -1);
    right: 4.0625em;
    z-index: -1;
  }
  #ourMission .cs-picture {
    width: 100%;
    margin: 0;
    position: relative;
    display: block;
    /* width divided by height */
    aspect-ratio: 0.93134328;
    border-radius: 1rem;
    z-index: 1;
  }
  #ourMission .cs-picture:before {
    /* Top right box */
    content: "";
    width: 10rem;
    /* 202px - 248px */
    height: clamp(12.625rem, 25vw, 15.5rem);
    background: var(--secondary);
    opacity: 1;
    border-radius: 1rem;
    position: absolute;
    display: block;
    /* 16px -20px */
    /* wrapped in a calc function to get a negative clamp value */
    top: calc(clamp(0.5rem, 2.09vw, 1.25rem) * -1);
    right: calc(clamp(0.5rem, 2.09vw, 1.25rem) * -1);
  }
  #ourMission .cs-picture:after {
    /* Bottom left box */
    content: "";
    width: 10rem;
    /* 202px - 248px */
    height: clamp(12.625rem, 25vw, 15.5rem);
    background: var(--secondary);
    opacity: 1;
    border-radius: 1rem;
    position: absolute;
    display: block;
    /* 16px -20px */
    /* wrapped in a calc function to get a negative clamp value */
    bottom: calc(clamp(0.5rem, 2.09vw, 1.25rem) * -1);
    left: calc(clamp(0.5rem, 2.09vw, 1.25rem) * -1);
    z-index: -1;
  }
  #ourMission .cs-picture img {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 1rem;
  }
}
/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
  #ourMission .cs-container {
    max-width: 80rem;
    flex-direction: row;
    justify-content: flex-start;
    /* 60px - 128px */
    gap: clamp(3.75rem, 9.5vw, 8rem);
  }
  #ourMission .cs-wrapper {
    /* 328px - 502px */
    width: clamp(20.5rem, 37.5vw, 31.375rem);
    /* 440px - 520px */
    height: clamp(27.5rem, 40vw, 32.5rem);
    flex: none;
  }
  #ourMission .cs-picture {
    /* 16px - 20px */
    margin: 0 0 0 clamp(1rem, 5vw, 1.25rem);
    height: 100%;
    flex: none;
  }
  #ourMission .cs-content {
    width: 45%;
  }
}

  </style>